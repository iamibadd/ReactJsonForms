{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/numericField"
        },
        {
          "type": "Control",
          "scope": "#/properties/stringField"
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/singleSelectField"
        },
        {
          "type": "Control",
          "scope": "#/properties/singleRadioField",
          "options": {
            "format": "radio"
          }
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/multiSelectField"
        },
        {
          "type": "Control",
          "scope": "#/properties/checkboxField"
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/date"
        }
      ]
    }
  ]
}